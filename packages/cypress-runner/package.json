{
  "name": "cypress-runner",
  "version": "1.1.0",
  "main": "./out/index.js",
  "types": "./index.ts",
  "author": "Currents Software Inc",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "rm": "rimraf out",
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "release-it",
    "dev": "yarn build --watch --sourcemap=inline",
    "build": "esbuild ./index.ts ./bin/*.ts  ./plugin/*.ts ./support/*.ts --bundle --minify --platform=node --packages=external --outdir=out --external:'../index'"
  },
  "peerDependencies": {
    "cypress": ">= 10.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/debug": "^4.1.7",
    "@types/getos": "^3.0.1",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/verror": "^1.10.6",
    "esbuild": "^0.16.5",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "jest": "^29.3.1",
    "release-it": "^15.5.1",
    "rimraf": "^3.0.2",
    "tsconfig": "*",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@cypress/commit-info": "^2.2.0",
    "axios": "^1.2.0",
    "chalk": "^4.1.2",
    "colors": "^1.4.0",
    "commander": "^9.4.1",
    "common-path-prefix": "^3.0.0",
    "cy2": "^3.4.2",
    "debug": "^4.3.4",
    "getos": "^3.2.1",
    "globby": "^11.1.0",
    "is-ci": "^3.0.1",
    "jest-esbuild": "^0.2.9",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.4",
    "pretty-ms": "^7.0.1",
    "table": "^6.8.1",
    "tmp-promise": "^3.0.3",
    "verror": "^1.10.1"
  },
  "bin": {
    "cypress-runner": "./out/bin/index.js"
  },
  "files": [
    "out",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./out/index.js",
      "require": "./out/index.js"
    },
    "./plugin": {
      "import": "./out/plugin/index.js",
      "require": "./out/plugin/index.js"
    },
    "./support": {
      "import": "./out/support/index.js",
      "require": "./out/support/index.js"
    },
    "./package.json": "./package.json"
  },
  "release-it": {
    "hooks": {
      "before:init": "yarn rm && yarn run build"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
