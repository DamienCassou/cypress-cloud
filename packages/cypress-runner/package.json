{
  "name": "cypress-runner",
  "version": "1.0.6",
  "main": "./out/index.js",
  "types": "./index.ts",
  "author": "Currents Software Inc",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "release-it",
    "watch": "yarn build --watch",
    "build": "esbuild ./index.ts ./bin/*.ts  ./plugin/*.ts --bundle --minify --platform=node --packages=external --outdir=out --external:'../index'"
  },
  "peerDependencies": {
    "cypress": ">= 10.0.0"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.3",
    "@types/debug": "^4.1.7",
    "@types/getos": "^3.0.1",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/randomstring": "^1.1.8",
    "esbuild": "^0.16.5",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "jest": "^29.3.1",
    "release-it": "^15.5.1",
    "tsconfig": "*",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@cypress/commit-info": "^2.2.0",
    "axios": "^1.2.0",
    "colors": "^1.4.0",
    "commander": "^9.4.1",
    "common-path-prefix": "^3.0.0",
    "cy2": "^3.4.2",
    "debug": "^4.3.4",
    "getos": "^3.2.1",
    "globby": "^11.1.0",
    "is-ci": "^3.0.1",
    "jest-esbuild": "^0.2.9",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.4",
    "tmp-promise": "^3.0.3"
  },
  "bin": {
    "cypress-runner": "./out/bin/index.js"
  },
  "files": [
    "out",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./out/index.js",
      "require": "./out/index.js"
    },
    "./plugin": {
      "import": "./out/plugin/index.js",
      "require": "./out/plugin/index.js"
    },
    "./package.json": "./package.json"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn run build"
    },
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "npm": {
      "ignoreVersion": true
    }
  }
}
